#week-view ng-app="weekView" ng-controller="weekViewController"
  .row
    .col-xs-12.main-box
      .col-xs-6
        h3
          i.fa.fa-angle-double-left ng-click="redipsInit()"
          | {{calendarDisplayDate}}
          i.fa.fa-angle-double-right
      .col-xs-6
        .pull-right
          button.btn.btn-default.btn-lg
            i.fa.fa-eraser Reset changes
          button.btn.btn-default.btn-lg
            i.fa.fa-undo Undo all changes
          button.btn.btn-default.btn-lg
            i.fa.fa-trash Delete all shifts

      table.table set-drag=''
        thead
          / tr
          /   td.mark.common-shifts colspan="8"

          /     .shift-bar.drag.clone shift-bar='' ng-model="commonShift" ng-repeat="commonShift in commonShifts" ng-class="{'selected': toggledShifts.indexOf({{shift.id}}) > -1}" data-common-shift-id="{{commonShift.id}}"
              
          tr
            th.mark
              | Staff
            th.mark ng-repeat="day in daysInWeek" data-date="{{day[1]}}" 
              | {{day[0]}}
        tbody
          tr ng-repeat="employee in employees" data-employee-id="{{employee.id}}"
            td.employee-name.mark
              span
                | {{employee.name}}
              br
              small
                i.fa.fa-clock-o
                .employee-hours 
                  | {{employee.hoursExcludingThisWeek + employee.currentWeekHours}}/{{employee.totalHours}} hours
                i.fa.fa-dollar
                .employee-cost
                  | {{employee.costPerHour * (employee.hoursExcludingThisWeek + employee.currentWeekHours)}}
            td.shift-applicable ng-repeat="day in daysInWeek" data-date="{{day[1]}}" ng-model="day"
          tr
            td.mark colspan='1'
              .undo-td.bottom-controls
                i.fa.fa-undo.btn-block ng-click="resetSelected()"
              .plus-td.bottom-controls.pull-right
                i.fa.fa-plus-square.btn-block ng-click="showNewPopup = !showNewPopup"
            td.trash.trash-td.bottom-controls colspan='7' ng-click="removeShifts(toggledShifts)"
              i.fa.fa-trash
      | {{ shifts}}
  = render 'summary'

  .shift-bar.drag shift-bar='' ng-model="shift" ng-repeat="shift in shifts" data-length="{{shift.length}}" ng-class="{'selected': toggledShifts.indexOf({{shift.id}}) > -1}" data-shift-id="{{shift.id}}"

  .popup.expand-container ng-show="showPopup"
    h3 
      | Edit Shift
      small.pull-right
        i.fa.fa-minus
        i.fa.fa-plus
        i.fa.fa-close ng-click="showPopup = !showPopup"

    ng-form.form name="editShiftForm"
      .form-group
        .col-xs-5
          label Role
          select.form-control ng-model="selectedShift.role"
            option ng-repeat="role in roles" value="{{role}}"
              | {{role}}
        .col-xs-5.col-xs-offset-2
          label Employee
          select.form-control ng-model="selectedShift.employeeID"
            option ng-repeat="employee in employees" value="{{employee.id}}" ng-selected="selectedShift.employeeID == employee.id" 
              | {{employee.name}}

      .form-group
        .col-xs-5
          .col-xs-6
            label
              | Start
              small 
                | (h)
            input.form-control type='text' ng-model="selectedShift.startHour"
          .col-xs-6
            label 
              small 
                | (min)
            input.form-control type='text' ng-model="selectedShift.startMin"

        .col-xs-5.col-xs-offset-2
          .col-xs-6
            label
              | End
              small 
                | (h)
            input.form-control type='text' ng-model="selectedShift.endHour"
          .col-xs-6
            label
              small 
                | (min)
            input.form-control type='text' ng-model="selectedShift.endMin"
      .form-group
        .col-xs-5
          label Date
          input.form-control type='text' ng-model="selectedShift.date"

        .col-xs-5.col-xs-offset-2
          label Break Hours
          input.form-control type='text' ng-model="selectedShift.breakHours"

      .form-group
        .col-xs-12
          button.btn.btn-primary.btn-block ng-disabled="editShiftForm.$pristine" ng-click="updateShift(selectedShift)" Update shift

  = render 'newShiftPopup'